<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spinner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:visibility="visible">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tncovidcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TN covid count:"/>
            <TextView
                android:id="@+id/chncovidcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="CHN person count:" />
            <Spinner
                android:id="@+id/spinner_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:prompt="@string/spinner_title"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:srcCompat="@drawable/avatarvenky"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="7dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/athuwithhair" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mottai"
                tools:srcCompat="@drawable/mottai" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/anuatucheemu"
                tools:srcCompat="@drawable/anuatucheemu" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>